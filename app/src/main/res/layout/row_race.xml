<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_size_nano"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_padding_size_small"
        android:paddingEnd="@dimen/margin_padding_size_medium"
        android:paddingStart="@dimen/margin_padding_size_medium"
        android:paddingTop="@dimen/margin_padding_size_small"
        >
        <ImageView
            android:id="@+id/race_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/margin_padding_size_small"
            android:layout_weight="0"
            android:textColor="@color/black"
            tools:src="@drawable/profile_plain"
            />
        <ImageView
            android:id="@+id/race_flag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/margin_padding_size_small"
            android:layout_weight="0"
            android:textColor="@color/black"
            tools:src="@drawable/flag_fr"
            />
        <TextView
            android:id="@+id/race_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="Tour de France - Etape 1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/race_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="WT"
                />
            <TextView
                android:id="@+id/race_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                tools:text="10/07"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>